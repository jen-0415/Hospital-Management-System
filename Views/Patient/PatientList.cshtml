@{
    Layout = "_Layout";
}

@model IEnumerable<Hospital_Management_System.Models.Patient>

<h2>Patient List</h2>

<table border="1" cellpadding="8" style="background:white;">
    <tr style="background:#ddd;">
        <th>ID</th>
        <th>Name</th>
        <th>Age</th>
        <th>Condition</th>
        <th>Action</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.FullName</td>
            <td>@p.Age</td>
            <td>@p.MedicalCondition</td>
            <td>
                <a href="/Patient/PatientDetails/@p.Id">View</a>
            </td>
        </tr>
    }
</table>
